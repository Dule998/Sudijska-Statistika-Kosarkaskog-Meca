<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ly_ms_team2score"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_below="@+id/ly_ms_team2name"
        android:layout_marginStart="106dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/ly_ms_team1score"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/ly_ms_team1score"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_below="@+id/ly_ms_team1name"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/ly_ms_team2name"
        app:srcCompat="@drawable/ddaa" />

    <TextView
        android:id="@+id/ly_ms_team2name"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/ly_ms_team1name"
        android:text="TextView"
        android:textAlignment="textEnd" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/ddaa" />

    <TextView
        android:id="@+id/ly_ms_team1name"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="TextView" />
</RelativeLayout>