<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        android:src="@drawable/ddaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/home_butt_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista naloga" />

        <TextView
            android:id="@+id/home_textView_nextMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sledeci mec: "
            android:textSize="18sp" />

        <Button
            android:id="@+id/home_butt_nextMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unesi sledeci mec" />

        <View style="@style/Divider"/>

        <Button
            android:id="@+id/home_butt_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista timova" />

        <Button
            android:id="@+id/home_butt_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista igraca" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>